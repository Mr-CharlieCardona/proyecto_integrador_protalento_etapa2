  <main class="main">
      <div class="main__form-container">
         <h2>Contacto</h2>
         <form class="main__form-container__form" action="">
            
            

            <!-- group name  -->
            <div class="main__form-container__form__group">
               <label for="name">Nombre:</label>
               <div class="main__form-container__form__groupname">
                  <input name="nombre" class="group-name__form__input" id="name" type="text" placeholder="Nombre" required>
                  <i class="fa-solid fa-circle-xmark"></i>
               </div>
               <p class="main__form-container__form__group__error">El nombre debe ser mínimo de 4 letras y solo debe contener letras</p>
            </div>

            <!-- group email -->
            <div class="main__form-container__form__group">
               <label for="email">Correo:</label>
               <div>
                  <input class="form__input" id="email" type="email" placeholder="correo@mail.com">
                  <i class="fa-solid fa-circle-xmark"></i>
               </div>
               <p class="main__form-container__form__group__error">
                  solo debe contener letras, números, guiones y guion bajo.
               </p>
            </div>

            <!-- group phone -->
            <div class="main__form-container__form__group">
               <label for="phone">Telefono:</label>
               <div>
                  <input class="form__input" id="phone" type="number" placeholder="300+++++++">
                  <i class="fa-solid fa-circle-xmark"></i>
               </div>
               <p class="main__form-container__form__group__error">
                  solo debe contener letras, números, guiones y guion bajo.
               </p>
            </div>


            <!-- group asunto -->
            <div class="main__form-container__form__group">
               <label for="name">Asunto:</label>
               <div>
                  <input id="asunto" type="text" placeholder="Asunto" required>
                  <i class="fa-solid fa-circle-xmark"></i>
               </div>
               <p class="main__form-container__form__group__error">El nombre debe ser mínimo de 4 letras y solo debe contener letras</p>
            </div>

            <!-- group message -->
            <div class="main__form-container__form__group-textarea">
               <label for="mensaje">Mensaje:</label>
               <div>
                  <textarea name="mensaje" id="mensaje" cols="100" rows="10" placeholder="Coemntario" required></textarea>
                  /<i class="fa-solid fa-circle-xmark"></i>
               </div>
               <p class="main__form-container__form__group__error">
                  Este campo no puede enviarse vació.
               </p>
            </div>

            <!-- group terms and conditions -->
            <div class="main__form-container__form__group-input-terms">
               <label class="main__form-container__form__label">
                  <input type="checkbox" name="terms" id="terms">
                  Acepto los términos y condiciones
               </label>
            </div>

            <div class="main__form-container__form__errorMessage" id="errorMesagge">
               <p  id="form_error"><i class="fa-solid fa-triangle-exclamation"></i>
               <b>Error:</b> llene el formulario correctamente</p>
            </div>

            <div class="main__form-container__form__div-button">
               <button type="submit">Enviar</button>
               <p  id="exitoso">Formulario enviado exitosamente</p>
            </div>
         </form>
      </div>
   </main> 